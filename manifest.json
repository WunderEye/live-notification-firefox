{
	"applications": {
		"gecko": {
			"id": "livenotification@wundereye.com"
		}
	},
	"manifest_version": 2,
	"name": "开播提醒",
	"version": "1.0.1",

	"description": "关注Panda.tv主播，开播时发送提醒",
	"icons": {
		"128": "icon128.png"
	},

	"background": {
		"scripts": ["common.js", "background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "icon128.png"
	},

	"permissions": [
		"http://www.panda.tv/",
		"http://*.pdim.gs/",
		"storage",
		"notifications",
		"alarms"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
}
